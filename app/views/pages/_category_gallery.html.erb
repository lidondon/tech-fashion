<% i = 0 %>
<div class="container">
	<% columns.try(:each) do |column| %>
		<div class="row row-eq-height">
			<% column.times.each do %>
				<div class="<%= "col-md-#{12 / column}" %> <%= "col-xs-#{12 / column}" %>" />
					<%= render 'category_product_item', product: @products[i], title: @products[i].category.name %>
					<% i += 1 %>
				</div>
			<% end %>
		</div>
		<br />
	<% end %>
</div>